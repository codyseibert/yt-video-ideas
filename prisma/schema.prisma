generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// MANY TO MANY
// -- user can have 0 or more upvoted ideas
// -- ideas can have 0 or more users(upvoters)

// ONE TO MANY
// -- user can create 0 or more ideas
// --




model Idea {
  id          String  @id @default(uuid())
  title       String
  description String
}
