generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model idea{
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  voteCount Int @default(0)
  authorImage String?
  authorName String?
  title String
  description String
  category String @default("")
  likes likes[]
}

model likes {
  id     String @id @default(uuid())
  name   String
  ideaId String?
  email  String?
  Idea   idea?   @relation(fields: [ideaId], references: [id])
}
